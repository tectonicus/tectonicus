<?xml version="1.0"?>
<tectonicus version="2">
	<!--
	This sample configuration demonstrates the most commonly used configuration settings.

	You only need to change the "worldDir" path below to your Minecraft world folder. 
	Increasing the "closestZoomSize" to "24" or "48" will save you disk space, but with
	less detail available when zoomed all the way in.
	
	See exampleConfig.xml for a sample with more options,
	or fullConfig.xml for all the available settings and their defaults. 
	-->

	<config outputDir="C:\Tectonicus\My World Map"
	        numZoomLevels="8"/>

	<map name="My World Map"
	     worldDir="C:\Users\xxxx\AppData\Roaming\.minecraft\saves\My World"
	     dimension="terra"
	     closestZoomSize="12">

		<!-- Limit world rendering to a sub region. Optional, omit for the full world -->
		<subset>
			<!-- Radius is in world units. -->
			<CircularSubset radius="500"/>
		</subset>

		<layer name="Day"
		       lighting="day"
		       renderStyle="normal"/>
	</map>

</tectonicus>
